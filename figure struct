#include <iostream>
#include <string>

using namespace std;

class square    
{
private:
	double s_side; // s_side - short side
public:
	square(double _newS){
		this->s_side = _newS;
	}
	void setS_side(double _newS){ // tak sie ustawia wartosc
		this->s_side = _newS;
	}
	double getS_side(){ 
		return this->s_side;
	}
};
class rectangle: public square // dziedziczenie po klasie square
{
private:
	double l_side; // l_side = long side
public:
	rectangle(double _newS,double _newL):square(_newS){ 
		this->l_side= _newL;
	}
};

class pentagon: public rectangle // dziedziczenie po klasie rectangle + square
{
private:
	double la_side; // la = last
public:
	pentagon(double _newS,double _newL,double _newLa):rectangle(_newL,_newS){ 
		this->la_side= _newLa;
	}
};
class hexagon: public rectangle // dziedziczenie po klasie square, jest to szesciokÄ…t foremny
{
private:
	double r_side; // r_side ostatnie dwa boki
public:
	hexagon(double _newS,double _newL,double _newR):rectangle(_newS,_newL){ 
		this->r_side= _newR;
	}
};
class diamond: public square // dziedziczenie po klasie square, jest to romb
{
public:
	diamond(double _newS):square(_newS){} 
};

class trapeze: public square
{
private:
	double d_side; // d_side = down side
	double u_side; // u_side = up side
public:
	trapeze(double _newS,double _newD,double _newU):square(_newS){
		this->d_side=_newD;
		this->u_side=_newU;
	}
};

class triangle: public square
{
public:
	triangle(double _newS):square(_newS){}
};


class circle
{
private:
		double r; // r = radius
public:
	circle(double radius){
		this->r = radius;
	}
	void setr(double radius){
		this->r = radius;
	}
	double getr(){ 
		return this->r;
	}
};
int main(){}
